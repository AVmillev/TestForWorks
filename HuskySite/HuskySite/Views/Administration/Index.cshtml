
@model IEnumerable<HuskySite.Models.ApplicationUser>
@{
    ViewBag.Title = "Список пользователей";
    ViewData.AddActivePage(AdministrationNavPages.Index);
}

    
<h2>Список пользователей</h2>
    <table class="table">
        <tr><th>Логин</th><th>ФИО</th><th>Email</th><th></th></tr>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.UserName</td>
            <td>@user.LastName @user.FirstName @user.MiddleName</td>
            <td>@user.Email</td>
            <td>
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="EditUser" asp-route-id="@user.Id">Изменить</a>
                    <a class="btn btn-sm btn-primary" asp-action="EditRole" asp-route-userid="@user.Id">Права доступа</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
        }
    </table>

