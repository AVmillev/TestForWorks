@model HuskySite.Models.BookkeepingModels.Accounting

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Bookkeeping/_Layout.cshtml";
    ViewData.AddActivePage(BookkeepingNavPages.Accounting);
}

<h2>Изменение</h2>

<h4>Операция</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="WalletID" class="control-label"></label>
                <select asp-for="WalletID" class="selectpicker" data-done-button="true" data-size="15" title="Выберите кошелек ..." asp-items="ViewBag.WalletID"></select>
                <span asp-validation-for="WalletID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Currency" class="control-label"></label>
                <select asp-for="Currency" class="selectpicker" data-done-button="true" data-size="15" title="Выберите валюту ..." asp-items="@new SelectList(Enum.GetNames(typeof(Currencyes)))"></select>
                <span asp-validation-for="Currency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTimeOperation" class="control-label"></label>
                <input asp-for="DateTimeOperation" class="form-control" />
                <span asp-validation-for="DateTimeOperation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountId" class="control-label"></label>
                <select asp-for="AccountId" class="selectpicker" data-done-button="true" data-size="15" title="Выберите контрагента ..." asp-items="ViewBag.AccountId"></select>
                <span asp-validation-for="AccountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountingType" class="control-label"></label>
                <select asp-for="AccountingType" class="selectpicker" data-done-button="true" data-size="15" title="Выберите тип операции ..." asp-items="@new SelectList(Enum.GetNames(typeof(AccountingTypes)))"></select>
                <span asp-validation-for="AccountingType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OperationTypeID" class="control-label"></label>
                <select asp-for="OperationTypeID" class="selectpicker" data-done-button="true" data-size="15" title="Выберите тип операции ..." asp-items="ViewBag.OperationTypeID"></select>
                <span asp-validation-for="OperationTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a class="btn btn-default" asp-action="Index">Назад</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
