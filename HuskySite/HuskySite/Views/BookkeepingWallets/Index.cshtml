@model IEnumerable<HuskySite.Models.BookkeepingModels.Wallet>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Bookkeeping/_Layout.cshtml";
    ViewData.AddActivePage(BookkeepingNavPages.Wallet);
}
<p>
    <a class="btn btn-default" asp-action="Create">Создать новый кошелек</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>           
            <th>
                @Html.DisplayNameFor(model => model.Balance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatternSMS)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>    
    <td>
        @Html.DisplayFor(modelItem => item.Balance)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PaymentType)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PatternSMS.Name)
    </td>
    <td>
        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.ID">Редактировать</a> 
        <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@item.ID">Подробно</a> 
        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ID">Удалить</a>
    </td>
</tr>
}
    </tbody>
</table>
